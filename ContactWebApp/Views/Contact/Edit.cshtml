@model ContactWebApp_CRUD_.Models.Person

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12" style="margin-top: 30px">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>Edit a Contact</h4>
            </div>
        </div>
        <div class="panel-body">
            @using (Html.BeginForm())
            {
                <div class="form-horizontal">
                    @Html.HiddenFor(model => Model.PersonId)

                    <div class="form-group">
                        <div class="col-sm-10">
                            @Html.LabelFor(model => model.FirstName, new { htmlAttributes = new { @class = "control-label col-md-2" } })
                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @value = Model.FirstName } })
                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-10">
                            @Html.LabelFor(model => model.LastName, new { htmlAttributes = new { @class = "control-label col-md-2" } })
                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @Value = Model.LastName } })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-10">
                            @Html.LabelFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "control-label col-md-2" } })
                            @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger", @Value = Model.PhoneNumber })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-10">
                            @Html.LabelFor(Model => Model.Email, new { htmlAttributes = new { @class = "control-label col-md-2" } })
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @Value = Model.Email } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger", @Value = Model.PhoneNumber })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-2">
                            <input type="submit" value="Save" class="btn btn-warning" />
                            @Html.DisplayText(" | ")
                            @Html.ActionLink("Back", "Index", new { area = "" }, new { @class = "btn btn-info" })
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
